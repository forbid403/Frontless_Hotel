<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.friedegg.myapplication.Floor_info"
    android:orientation="vertical">
    <LinearLayout
        android:background="#A99787"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/mainback"
            android:layout_gravity="center"
            android:gravity="fill"
            android:layout_marginLeft="10dp"
            android:background="@drawable/left"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/westin"
            android:text="WESTIN JOSUN"
            android:paddingLeft="10dp"
            android:gravity="fill"
            android:textColor="#FFFFFFFF"
            android:textSize="11pt"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:adjustViewBounds="true"
        android:background="@drawable/f5"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:adjustViewBounds="true"
        android:background="@drawable/f1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:adjustViewBounds="true"
        android:background="@drawable/f2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:adjustViewBounds="true"
        android:background="@drawable/f3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:adjustViewBounds="true"
        android:background="@drawable/f4" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/f6" />



</LinearLayout>
